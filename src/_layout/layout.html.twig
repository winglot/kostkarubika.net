<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ site.title }}{% endblock %}</title>
        {% block stylesheets %}
            {% include "_layout/elements/html5shiv.html.twig" %}
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            {% include "_layout/elements/stylesheets.html.twig" with { 'site': site } %}
        {% endblock %}

        {% include "_layout/elements/facebook-meta.twig" %}
    </head>
    <body>

        {% block body %}
            <!-- Fixed navbar -->
            {% include "_layout/elements/navbar.html.twig" with { 'site': site } %}

            {% block page %}
                <div class="container">
                    {% block content %}{% endblock %}
                </div>
            {% endblock %}

            <!-- Sticky footer -->
            {% include "_layout/elements/footer.html.twig" with { 'site': site } %}
        {% endblock %}

        {% block javascripts %}
            {% include "_layout/elements/javascripts.html.twig" with { 'site': site } %}
        {% endblock %}
    </body>
</html>
