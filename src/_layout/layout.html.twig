<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <link rel="KostkaRubika.net icon" href="{{ site.assets ~ "/images/logo-small.png"}}" />

        {# Website title #}
        <title>{% block title %}{{ site.title }}{% endblock %}</title>

        {# CSS Stylesheets #}
        {% block stylesheets %}
            <!--[if lt IE 9]><script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            {% include "_layout/elements/stylesheets.html.twig" with { 'site': site } %}
        {% endblock %}
    </head>
    <body>

        {% block body %}
            {# Fixed navbar #}
            {% include "_layout/elements/navbar.html.twig" with { 'site': site } %}

            {# Main content #}
            {% block page %}
                <div class="container">
                    {% block content %}{% endblock %}
                </div>
            {% endblock %}
        {% endblock %}

        {# JS at the end to speed up page load #}
        {% block javascripts %}
            {% include "_layout/elements/javascripts.html.twig" with { 'site': site } %}
        {% endblock %}
    </body>
</html>
