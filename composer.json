{
    "name": "KostkaRubika.net",
    "description": "A fan site about Rubik's Cube and it's variations",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Wojciech Inglot",
            "email": "wojciech@inglot.net.pl"
        }
    ],
    "config": {
        "vendor-dir": "vendor"
    },
    "require": {
        "winglot/gumdrop": "dev-master"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "http://git.inglot.net.pl/winglot/gumdrop.git"
        }
    ],
    "minimum-stability": "dev",
    "scripts": {
        "post-update-cmd": "php vendor/winglot/gumdrop/gumdrop.php install",
        "post-install-cmd": [
            "php vendor/winglot/gumdrop/gumdrop.php install",
            "mkdir bin",
            "ln -s ../vendor/winglot/gumdrop/gumdrop.php bin/gumdrop.php"
        ]
    }
}
